@model MedicalCRM.Models.Patient.MedicalCardViewModel

@{
    ViewData["Title"] = "Редактирование медицинской карточки";
}


<h1>Редактирование медицинской карточки</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            @Html.HiddenFor(m => m.MedicalCardId)
            <div class="form-group">
                <label asp-for="FamilyDoctorName" class="control-label"></label>
                <input asp-for="FamilyDoctorName" class="form-control" />
                <span asp-validation-for="FamilyDoctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodTypeId" class="control-label"></label>
                @Html.DropDownListFor(model => model.BloodTypeId, ViewBag.BloodTypes as SelectList)
                <span asp-validation-for="BloodTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактировать" class="btn btn-primary" />
            </div>
            @Html.HiddenFor(m => m.PatientId)
        </form>
    </div>
</div>

