@model MedicalCRM.Models.Patient.PatientLoginViewModel;

<div class="container d-flex justify-content-around align-items-center pt-5 mt-5">
    <div class="form-container d-flex align-items-center justify-content-around col-6 mt-5 pt-5">
        <section>
            <form id="account" method="post">
                <h2>Вход в кабинет пациента</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Inn" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Inn" class="form-label"></label>
                    <span asp-validation-for="Inn" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
                </div>
                <div>
                    <a asp-controller="Doctor" asp-action="Login"> Вы доктор? </a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
