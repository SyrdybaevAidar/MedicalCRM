
@model MedicalCRM.Models.Patient.PatientLoginViewModel;

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Авторизация</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Inn" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Inn" class="form-label"></label>
                    <span asp-validation-for="Inn" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
