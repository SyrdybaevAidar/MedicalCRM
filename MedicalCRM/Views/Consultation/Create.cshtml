@model MedicalCRM.Models.Patient.ConsultationViewModel

@{
    ViewData["Title"] = "AddConsultation";
}

<h1>Назначить консультацию</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recommendations" class="control-label"></label>
                <input asp-for="Recommendations" class="form-control" />
                <span asp-validation-for="Recommendations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complaints" class="control-label"></label>
                <input asp-for="Complaints" class="form-control" />
                <span asp-validation-for="Complaints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diseases" class="control-label"></label>
                <input asp-for="Diseases" class="form-control" />
                <span asp-validation-for="Diseases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" autocomplete="Date" aria-required="true" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note"></label>
                <input asp-for="Note" class="form-control" autocomplete="Date" aria-required="true" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
            @Html.HiddenFor(model => model.DoctorId)
            @Html.HiddenFor(model => model.PatientId)
            @Html.HiddenFor(model => model.ConsultationId)
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Doctor" class="btn btn-primary">Вернуться обратно</a>
</div>

